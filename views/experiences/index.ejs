<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<% layout('layouts/boilerplate.ejs') -%>
<link rel="stylesheet" href="css/card-style.css" />



<div class="body">
  
  <div class="container" style="margin-left: 5%;">
    <h1>All Experiences</h1>
    <br />
 
  <form class="form-inline" style="text-align: center;">
    <i class="fas fa-search" aria-hidden="true"></i>
    <input
      class="form-control form-control-sm ml-3 w-75"
      id="inp"
      onkeyup="myFunction()"
      type="text"
      placeholder="Search By Company"
      aria-label="Search"
    />
  </form>
</div>
  <ul id="myUL" class="body">
    <% for(exp of experiences) { %>

    <div class="card" style="max-width: 100%">
      <div class="card_right">
        <h1><%=exp.username %></h1>
        <div class="card_right__details">
          <ul class="contain">
            <li><%=exp.year %></li>
            <li><%=exp.role%></li>
            <li class="company"><%=exp.company%></li>
          </ul>
          <div
            class="card_right__review"
            style="
              white-space: nowrap;
              overflow: hidden;
              text-overflow: ellipsis;
            "
          >
            <p><%=exp.experience %></p>
          </div>
          <div class="card_right__button">
            <a href="/experiences/<%=exp._id%>">View Complete Experience</a>
          </div>
        </div>
      </div>
    </div>

    <!-- <a href="/experiences/<%=exp._id %>"><%=exp.username %> Interview Experience </a> -->
    <%}%>
  </ul>
</div>

<script src="scripts/search.js" async defer></script>
